<% include ./header %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card card-default">
                <div class="card-header">
                    Asetukset
                </div>
                <div class="card-body">

                    <% if (req.query.error == "password-change-wrong-password") { %>
                        <div class="alert alert-danger">Väärä salasana. Kokeile uudestaan.</div>
                    <% } %>

                    <% if (req.query.error == "password-change-no-match") { %>
                        <div class="alert alert-danger">Uudet salasanat eivät mätsänneet. Kokeile uudestaan.</div>
                    <% } %>

                    <% if (req.query.error == "password-change-generic") { %>
                        <div class="alert alert-danger">Jokin meni pieleen! Kokeile uudestaan. Jos homma ei pelitä, koita kirjautua uudelleen sisään.</div>
                    <% } %>

                    <% if (req.query.success == "password-changed") { %>
                        <div class="alert alert-success">Salasana vaihdettu onnistuneesti</div>
                    <% } %>
                
                    <h3>Vaihda salasana</h3>
                    <form action="/settings/change-password" method="post">
                        <div class="row">
                            <div class="form-group col-lg-4 col-md-12">
                                <label>Nykyinen salasana</label>
                                <input type="password" class="form-control" name="oldPassword" required>
                            </div>
                            <div class="form-group col-lg-4 col-md-6 col-sm-12">
                                <label>Uusi salasana</label>
                                <input type="password" class="form-control" name="newPassword" required>
                            </div>
                            <div class="form-group col-lg-4 col-md-6 col-sm-12">
                                <label>Uusi salasana uudestaan</label>
                                <input type="password" class="form-control" name="newPasswordValidate" required>
                            </div>
                        </div>
                        <input type="submit" class="btn btn-info" value="Vaihda salasana" />
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<% include ./footer %>